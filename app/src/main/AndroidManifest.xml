<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cloudfunctionsmessage">

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CloudFunctionsMessage"
        tools:targetApi="32">
        <activity
            android:name=".createrequest.MainActivity"
            android:exported="false" />
        <activity
            android:name=".list.details.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".list.ListActivity"
            android:exported="false" />
        <activity
            android:name=".signin.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".messageservice.MyFirebaseMessagingService"
            android:permission="com.google.android.c2dm.permission.SEND"
            tools:ignore="ExtraText"
            android:exported="true">
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>
    </application>

</manifest>